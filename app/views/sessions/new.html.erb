<% flash.each do |key, message| %>
  <h3>
    <%= content_tag(:div, message, class: "#{key}") %>
  </h3>
<% end %>
<h1>ログイン</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>


  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "ログインする" %>
<% end %>
